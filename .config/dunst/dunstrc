# See dunst(5) for all configuration options

[global]
    follow = mouse
    font = Monospace 12
    frame_width = 1
    separator_color = auto
    corner_radius = 3

[urgency_low]
    background = "#0c0c0c"
    foreground = "#ffffff"
    frame_color = "#cccc00"
    timeout = 5

[urgency_normal]
    background = "#0c0c0c"
    foreground = "#ffffff"
    timeout = 5

[urgency_critical]
    background = "#0c0c0c"
    foreground = "#ffffff"
    frame_color = "#cc0000"
    timeout = 10
