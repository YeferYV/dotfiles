// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Workspace || VimControl",
    "bindings": {
      "alt-c": "editor::Copy",
      "alt-v": "editor::Paste",
      "alt-f": "pane::ActivateNextItem",
      "alt-s": "pane::ActivatePreviousItem",
      "shift-space": ["workspace::SendKeystrokes", "ctrl-shift-p"],
      "ctrl-b": "workspace::ToggleLeftDock",
      "ctrl-\\": "workspace::ToggleBottomDock",
      "ctrl-left": "workspace::ActivatePaneLeft",
      "ctrl-down": "workspace::ActivatePaneDown",
      "ctrl-up": "workspace::ActivatePaneUp",
      "ctrl-right": "workspace::ActivatePaneRight",
      "ctrl-shift-h": ["workspace::DecreaseOpenDocksSize", { "px": 0 }],
      "ctrl-shift-j": ["workspace::DecreaseOpenDocksSize", { "px": 0 }],
      "ctrl-shift-k": ["workspace::IncreaseOpenDocksSize", { "px": 0 }],
      "ctrl-shift-l": ["workspace::IncreaseOpenDocksSize", { "px": 0 }],
      "ctrl-shift-left": "vim::ResizePaneRight",
      "ctrl-shift-down": "vim::ResizePaneDown",
      "ctrl-shift-up": "vim::ResizePaneUp",
      "ctrl-shift-right": "vim::ResizePaneLeft",
      "ctrl-alt-h": "pane::SplitDown",
      "ctrl-alt-v": "pane::SplitRight"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "alt-c": "terminal::Copy",
      "alt-v": "terminal::Paste",
      "alt-q": "terminal::ScrollPageUp",
      "alt-a": "terminal::ScrollPageDown",
      "alt-e": "terminal::ScrollLineUp",
      "alt-d": "terminal::ScrollLineDown",
      "alt-t": "terminal::ScrollToTop",
      "alt-g": "terminal::ScrollToBottom",
      "escape escape": "terminal::ToggleViMode",
      "alt-o": ["workspace::SendKeystrokes", "escape o"]
    }
  },
  {
    "context": "Editor && edit_prediction",
    "bindings": {
      "alt-j": "editor::AcceptPartialEditPrediction"
    }
  },
  {
    "context": "ProjectPanel && not_editing",
    "bindings": {
      "a": ["workspace::SendKeystrokes", "%"],
      "shift-l": ["workspace::SendKeystrokes", "o ctrl-b"],
      "q": ["workspace::SendKeystrokes", "ctrl-b"]
    }
  },
  {
    "context": "vim_mode == insert",
    "bindings": {
      "j k": ["workspace::SendKeystrokes", "escape"],
      "alt-h": ["workspace::SendKeystrokes", "escape"]
    }
  },
  {
    "context": "vim_mode == visual",
    "bindings": {
      "shift-y": ["workspace::SendKeystrokes", "g _ y"],
      "p": ["workspace::SendKeystrokes", "p g v y"]
    }
  },
  {
    "context": "vim_mode == normal",
    "bindings": {
      "shift-q": ["workspace::SendKeystrokes", ": q enter"],
      "shift-r": ["workspace::SendKeystrokes", "ctrl-shift-i : w enter"],
      "shift-y": ["workspace::SendKeystrokes", "y g _"],
      "space o": ["workspace::SendKeystrokes", ": E enter"],
      "shift-h": ["workspace::SendKeystrokes", "1 0 h"],
      "shift-j": ["workspace::SendKeystrokes", "1 0 j"],
      "shift-k": ["workspace::SendKeystrokes", "1 0 k"],
      "shift-l": ["workspace::SendKeystrokes", "1 0 l"],
      "right": ["workspace::SendKeystrokes", "g t"],
      "left": ["workspace::SendKeystrokes", "g shift-t"]
    }
  }
]
