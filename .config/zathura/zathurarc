set sandbox none
set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
map u scroll half-up
map d scroll half-down
map D toggle_page_mode # s/a to fit horizontal/vertical
map i zoom in  # default to +
map o zoom out # default to -
map c recolor
map 0 set guioptions\ none # no statusbar
map 1 set guioptions\ s    # reset statusbar

# set adjust-open                  "width"
# set recolor                      "true"
set recolor-darkcolor              "#f6dcb3"
set recolor-lightcolor             rgba(0,0,0,0)
set default-bg                     rgba(0,0,0,0.7)
set default-fg                     "#f6dcb3"
