# If running as root use "sudo -i -i" though audio doesn't work
# date +%T | awk -F ':' '($1 >= 1 && $2 <= 59)' | xargs -I_ [ -z _ ] || (echo "23:59 hours ðŸ›Œ lights out" | tee >(mimic -voice slt_hts) >(xargs -I_ sudo -i -i notify-send -u critical _ ) )

countdown() {
  NID=0
  for i in {$1..0..1}
    do
      NID=$(notify-send -p -r $NID "${i}" )
      sleep 1
    done
}

# Path for mimic nix package
export PATH="/home/drksl/.nix-profile/bin:/home/drksl/.local/bin:/usr/local/bin:/usr/bin"

# TO STOP SHUTDOWN:
# ps aux | grep cronbat | awk '{print $2}' | xargs kill -9 && killall notify-send

# DON'T EVEN DARE TO COMMENT THIS CODE OUT
date +%T | awk -F ':' '($1 >= 23 && $2 == 50)' | xargs -I_ [ -z _ ] || (echo "23:50 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 40)' | xargs -I_ [ -z _ ] || (echo "23:40 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 30)' | xargs -I_ [ -z _ ] || (echo "23:30 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 20)' | xargs -I_ [ -z _ ] || (echo "23:20 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 10)' | xargs -I_ [ -z _ ] || (echo "23:10 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 23 && $2 == 00)' | xargs -I_ [ -z _ ] || (echo "23:00 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 50)' | xargs -I_ [ -z _ ] || (echo "22:50 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 40)' | xargs -I_ [ -z _ ] || (echo "22:40 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 30)' | xargs -I_ [ -z _ ] || (echo "22:30 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 22 && $2 == 20)' | xargs -I_ [ -z _ ] || (echo "22:20 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
# date +%T | awk -F ':' '($1 >= 22 && $2 == 10)' | xargs -I_ [ -z _ ] || (echo "22:10 hours ðŸ›Œ " | tee >(mimic -voice slt_hts)  && countdown 600 && sudo -i poweroff)
# date +%T | awk -F ':' '($1 >= 22 && $2 == 00)' | xargs -I_ [ -z _ ] || (echo "22:00 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
# date +%T | awk -F ':' '($1 >= 21 && $2 == 50)' | xargs -I_ [ -z _ ] || (echo "21:50 hours ðŸ›Œ " | tee >(mimic -voice slt_hts) && countdown 600 && sudo -i poweroff)
date +%T | awk -F ':' '($1 >= 21 && $2 == 50) {exit 1}' || (mimic -voice slt_hts -t "21:50 hours ðŸ’¤ " && notify-send -u low "21:50 hours ðŸ’¤")
date +%T | awk -F ':' '($1 >= 21 && $2 ~".0") {print $1":"$2}' | mimic -voice slt_hts
date +%T | awk -F ':' '($1 ~ "." && $2 == 00) {print $1":"$2}' | mimic -voice slt_hts
cat /sys/class/power_supply/BAT0/status | awk '$1 == "Discharging" {exit 1}' &&
cat /sys/class/power_supply/BAT0/capacity | awk ' $1 >= 95 {system("mimic -voice slt_hts -t complete-charge") }'
cat /sys/class/power_supply/BAT0/status | awk '$1 == "Charging" {exit 1}' &&
cat /sys/class/power_supply/BAT0/capacity | awk '$1 <= 15 {system("mimic -voice slt_hts -t "$1"-percent") } ; $1 <= 5 {system("notify-send -u critical " $1 "% discharging\n") }'
