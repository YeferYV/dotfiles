{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lazygit",
            "type": "shell",
            "command": "lazygit",
            "presentation": {
                "focus": true,
                "close": true,
            }
        },
        {
            "label": "tmux-copy-mode",
            "type": "shell",
            "command": "tmux copy-mode \\; send-keys left left",
            "presentation": {
                "reveal": "silent",
                "close": true,
            }
        },
        {
            "label": "tmux-split-vertical",
            "type": "shell",
            "command": "tmux splitw -v",
            "presentation": {
                "reveal": "silent",
                "close": true,
            }
        },
        {
            "label": "tmux-split-horizontal",
            "type": "shell",
            "command": "tmux splitw -h",
            "presentation": {
                "reveal": "silent",
                "close": true,
            }
        },
        {
            "label": "quokka-start",
            "type": "shell",
            "command": "${command:quokka.makeQuokkaFromExistingFile}",
            "presentation": {
                "reveal": "never",
            }
        },
        {
            "label": "quokka-stop",
            "type": "shell",
            "command": "${command:quokka.stopAll}",
            "presentation": {
                "reveal": "never",
            }
        },
        {
            "label": "wolf-start",
            "type": "shell",
            "command": "${command:wolf.barkAtCurrentFile}",
            "presentation": {
                "reveal": "never",
            }
        },
        {
            "label": "wolf-stop",
            "type": "shell",
            "command": "${command:wolf.stopBarking}",
            "presentation": {
                "reveal": "never",
            }
        },
    ]
}