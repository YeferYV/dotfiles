{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "lazygit",
            "type": "shell",
            "command": "lazygit",
            "presentation": {
                "focus": true,
                "close": true,
            }
        },
        {
            "label": "tmux-copy-mode",
            "type": "shell",
            "command": "tmux copy-mode \\; send-keys left left",
            "presentation": {
                "reveal": "silent",
                "close": true,
            }
        },
        {
            "label": "tmux-split-vertical",
            "type": "shell",
            "command": "tmux splitw -v",
            "presentation": {
                "reveal": "silent",
                "close": true,
            }
        },
        {
            "label": "tmux-split-horizontal",
            "type": "shell",
            "command": "tmux splitw -h",
            "presentation": {
                "reveal": "silent",
                "close": true,
            }
        },
        {
            "label": "open-file",
            "type": "shell",
            "command": "${command:explorer.openAndPassFocus}",
            "presentation": {
                "reveal": "never",
            }
        },
        {
            "label": "unfocus",
            "type": "shell",
            "command": "${command:workbench.view.explorer}",
            "presentation": {
                "reveal": "never",
            }
        },
        {
            "label": "open-file-unfocus",
            "dependsOrder": "sequence",
            "dependsOn": ["open-file", "unfocus"],
        },
    ]
}