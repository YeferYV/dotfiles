#!/bin/sh

# Screenshot taker
menu() {
	printf "a selected area\\ncurrent window\\nfullscreen\\na selected area (copy)\\ncurrent window (copy)\\nfullscreen (copy)" | dmenu -l 6 -i -p "Screenshot which area?"
}

if [ "$1" = "fullscreen" ]; then
		import -window root  ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png"
else
	option="$(menu)"
	case "$option" in
		"a selected area")         killall unclutter && import                 ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png" && unclutter --timeout 1 & ;;
		"current window")          import -window "$(xdotool getactivewindow)" ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png" ;;
		"fullscreen")              import -window root                         ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png" ;;
		"a selected area (copy)")  killall unclutter && import                 /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png && unclutter --timeout 1 & ;;
		"current window (copy)")   import -window "$(xdotool getactivewindow)" /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png ;;
		"fullscreen (copy)")       import -window root                         /tmp/screenshot.png && xclip -selection clipboard -t image/png /tmp/screenshot.png ;;
		*) notify-send "Nothing selected" && exit ;;
	esac
fi &&
notify-send "Maim" "screenshot done"
