#!/bin/sh

# Screenshot taker
menu() {
	printf "a selected area\\ncurrent window\\nfullscreen\\na selected area (copy)\\ncurrent window (copy)\\nfullscreen (copy)" | dmenu -l 6 -i -p "Screenshot which area?"
}

if [ "$1" = "fullscreen" ]; then
		maim --hidecursor ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png"
else
	option="$(menu)"
	case "$option" in
		"a selected area") maim --hidecursor -s ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png" || exit ;;
		"current window") maim --hidecursor -i "$(xdotool getactivewindow)" ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png" ;;
		"fullscreen") maim --hidecursor ~/bgs/bgi/"$(date '+%y%m%d-%H%M-%S').png" ;;
		"a selected area (copy)") maim --hidecursor -s | xclip -selection clipboard -t image/png ;;
		"current window (copy)") maim --hidecursor -i "$(xdotool getactivewindow)" | xclip -selection clipboard -t image/png ;;
		"fullscreen (copy)") maim --hidecursor | xclip -selection clipboard -t image/png ;;
		*) notify-send "Nothing selected" && exit ;;
	esac
fi &&
notify-send "Maim" "screenshot done"
