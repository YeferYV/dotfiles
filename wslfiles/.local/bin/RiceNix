#===================================== Docker run ubuntu-ricenix =====================================#

# xhost +
# cd "$(git rev-parse --show-toplevel)"
# docker run -it \
#     --name ubuntu-ricenix \
#     --ipc=host \
#     --volume=${PWD%/*}:/home/dtfls/docker-volume \
#     --volume=/run/user/1000/pipewire-0:/run/user/1000/pipewire-0 \
#     --volume=/tmp/.X11-unix:/tmp/.X11-unix \
